<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anew.msbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name="com.example.anew.msbuddy.GRE_ScrollingActivity"
            android:label="@string/title_activity_gre__scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.anew.msbuddy.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.anew.msbuddy.TOEFL_ScrollingActivity"
            android:label="@string/title_activity_toefl__scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.anew.msbuddy.IELTS_ScrollingActivity"
            android:label="@string/title_activity_ielts__scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.anew.msbuddy.university_ScrollingActivity"
            android:label="@string/title_activity_university__scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.anew.msbuddy.Evaluated_Result" />
    </application>

</manifest>