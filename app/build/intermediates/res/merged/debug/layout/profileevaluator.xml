<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"


    android:layout_margin="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your GRE Score"
        android:textSize="20dp"
        android:id="@+id/textView_enter_gre"
        android:textColor="@color/abc_search_url_text_pressed" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">>
        <EditText
            android:id="@+id/edittext_verbal"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Verbal"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_quant"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Quant"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_awa"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:hint="AWA"
            android:inputType="number"
            android:layout_weight="1"/>


        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your TOEFL Score"
        android:textSize="20dp"
        android:id="@+id/textView_enter_toefl"
        android:paddingTop="20dp"
        android:textColor="@color/abc_search_url_text_pressed" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <EditText
            android:id="@+id/edittext_reading"
            android:layout_width="97dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Reading"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_listening"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:hint="Listening"
            android:inputType="number"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_speaking"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:hint="Speaking"
            android:inputType="number"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edittext_writing"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:hint="Writing"
            android:inputType="number"
            android:layout_weight="1"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your UG Percentage"
        android:textSize="20dp"
        android:id="@+id/textView_enter_UG_percentage"
        android:paddingTop="20dp"
        android:textColor= "#000" />

    <EditText
        android:id="@+id/edittext_percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Your Percentage here"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Work experience"
        android:textSize="20sp"
        android:id="@+id/textView_work_experience"
        android:paddingTop="20dp"
        android:textColor="@color/abc_search_url_text_selected" />

    <EditText
        android:id="@+id/edittext_work_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Your work experience"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Research Paper"
        android:textSize="20sp"
        android:id="@+id/textView_research_paper"
        android:paddingTop="20dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/edittext_research_paper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Research paper"
        />




    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="EVALUATE"
        android:id="@+id/btnevaluate"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

</LinearLayout>